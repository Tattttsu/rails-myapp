<p>スケジュール詳細</p>
<table>
<tr><th>タイトル</th><td><%= @post.title %></td></tr>
<tr><th>開始日</th><td><%= @post.start_day.strftime("%Y年%m月%d日") %></td></tr>
<tr><th>投稿日時</th><td><%= @post.created_at.to_s(:datetime_jp) %></td></tr>
<tr><th>終日</th>
<td>
  <%if @post.allday == true %>
    ○
  <%else%>
  <%end%>
</td>
</tr>
<tr><th>スケジュールメモ</th><td><%= @post.memo %></td></tr>
</table>
<div><%= link_to "スケジュール一覧に戻る", "/posts"%></div>
<div><%= link_to "スケジュールを編集する", "/posts/#{@post.id}/edit"%></div>
<div><%= button_to "スケジュールを削除する", "/posts/#{@post.id}", method: :delete, data: { confirm: '本当に削除しますか?'} %></div>