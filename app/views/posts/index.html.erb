<p>スケジュール一覧</p>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日</th>
        <th>確認</th><th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %> 
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.start_day.strftime("%Y年%m月%d日")%></td>
          <td><%= post.end_day.strftime("%Y年%m月%d日") %></td>
          <td>
            <%if post.allday == true %>
            ○
            <%else%>
            
            <%end%>
          </td>
          <td><%= post.created_at.to_s(:datetime_jp) %></td>
          <td><%= link_to "確認", post_path(post.id) %></td>
          <td><%= link_to "編集", edit_post_path(post.id) %></td>
          <td><%= button_to "削除", post_path(post.id), method: :delete, data: { confirm: '本当に削除しますか?'} %></td>
        </tr>
      <% end %> 
    </tbody>
  </table>

<div><%= link_to "新規登録", "posts/new" %></div>